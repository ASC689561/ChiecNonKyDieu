<Window x:Class="ChiecNonKyDieu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiecNonKyDieu"
        mc:Ignorable="d"
        Title="MainWindow" Height="606" Width="1076">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/background.png"/>
        </Grid.Background>
        <Canvas x:Name="vongQuay" HorizontalAlignment="Left" Height="345" Margin="339,79,0,0" VerticalAlignment="Top" Width="391" RenderTransformOrigin="0.5,0.5">
             <Canvas.Triggers> 
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)" To="360" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>

            <Canvas.RenderTransform> 
                <RotateTransform x:Name="noFreeze" />
            </Canvas.RenderTransform>
         

            <Canvas.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/vongquay.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="87" Margin="20,18,0,0" VerticalAlignment="Top" Width="137" Click="button_Click"/>
    </Grid>
</Window>
