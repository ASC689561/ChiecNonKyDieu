<UserControl x:Class="ChiecNonKyDieu.PlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChiecNonKyDieu"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="224" d:DesignWidth="225">

    <Grid x:Name="grid"> 
        <UniformGrid Margin="0,141,0,15" Rows="2">
            <TextBox Background="Transparent" BorderThickness="0" Text="{Binding Name}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" Foreground="Magenta" FontFamily="Snap ITC"/>
            <TextBox Background="Transparent" BorderThickness="0" Text="{Binding CurrentScore}"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Stencil Std" FontSize="26.667"/>
        </UniformGrid>
    </Grid> 
</UserControl>
